{
  "name": "D2CMedia devtools",
  "version": "1.0.0",
  "description": "Chrome DevTools extension for debugging D2CMedia Compiled Site.",
  "manifest_version": 2,
  "devtools_page": "background.html",
  "web_accessible_resources": [
    "devtools.html",
    "background.html",
    "src/backend.js",
    "src/shared/constant.js",
    "src/shared/consolas.js"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "page_action" :{
    "default_icon" : "icons/ic_launcher-r.png",
    "default_title" : "D2CMedia Debug",
    "default_popup": "popups/popup.html"
  },
  "icons" : {
    "48" : "icons/ic_launcher-s.png"
  },
  "content_scripts": [
    {
      "matches": [
        "file:///*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/hook.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "file:///*",
    "*://*/*",
    "contextMenus",
    "declarativeContent"
  ]
}